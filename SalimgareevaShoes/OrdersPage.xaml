<Page x:Class="SalimgareevaShoes.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalimgareevaShoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdersPage" FontFamily="Times New Roman" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <ListView x:Name="OrdersListView"  HorizontalAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" CornerRadius="5" BorderBrush="Black" >

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="600"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>


                            <TextBlock Margin="10" Text="{Binding OrderCode, StringFormat= Артикул заказа: {0}}" FontSize="25" Grid.Row="0"></TextBlock>
                            <TextBlock Margin="10" Text="{Binding OrderStatus.OrderStatusName, StringFormat=Статус: {0}}" FontSize="20" Grid.Row="1"></TextBlock>
                            <TextBlock Margin="10" Text="{Binding PickUpPoints.OrderPickUpPointStr, StringFormat= Адрес пункта выдачи: {0}}" FontSize="20" Grid.Row="2"></TextBlock>
                            <TextBlock Margin="10" Text="{Binding OrderDate, StringFormat= 'Дата заказа: {0:dd.MM.yyyy}'}" FontSize="20" Grid.Row="3"></TextBlock>


                            <TextBlock Margin="10" Text="{Binding OrderDelivertDate, StringFormat='Дата доставки: {0:dd.MM.yyyy}'}" FontSize="25" Grid.Row="1" Grid.Column="1"></TextBlock>


                            <Button Name="EditButton" Content="Редактировать" HorizontalAlignment="Center" VerticalAlignment="Center" Click="EditButton_Click" Grid.Column="2" Grid.Row="1" ></Button>
                            <Button Name="DeleteButton" Content="Удалить" HorizontalAlignment="Center" VerticalAlignment="Center" Click="DeleteButton_Click"  Grid.Column="2" Grid.Row="2" ></Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Name="AddOrderButton" Content="Добавить заказ" HorizontalAlignment="Center" VerticalAlignment="Center" Click="AddOrderButton_Click" Grid.Row="1"></Button>
    </Grid>
</Page>
