<Page x:Class="SalimgareevaShoes.ShoesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalimgareevaShoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShoesPage" FontFamily="Times New Roman">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >

            <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                <TextBlock Text="Введите данные для поиска через пробел" FontSize="20" ></TextBlock>
                <TextBox Name="SearchTB" TextChanged="SearchTB_TextChanged" FontSize="20" ></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock FontSize="20" Text="Сортировать по количеству на складе"  ></TextBlock>
                <ComboBox FontSize="20" Name="SortCB"  SelectionChanged="SortCB_SelectionChanged" >
                    <TextBlock FontSize="20">Не сортировать</TextBlock>
                    <TextBlock FontSize="20">По возрастанию</TextBlock>
                    <TextBlock FontSize="20">По убыванию</TextBlock>
                </ComboBox>
            </StackPanel>
            
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Сортирорать по поставщику" FontSize="20"  ></TextBlock>
                <ComboBox Name="SupplersCB" FontSize="20"  SelectionChanged="SupplereCB_SelectionChanged">
                    <TextBlock Text="Все" FontSize="20"></TextBlock>
                    <TextBlock Text="Kari" FontSize="20" ></TextBlock>
                    <TextBlock Text="Обувь для вас" FontSize="20" ></TextBlock>
                </ComboBox>
            </StackPanel>
            
        </StackPanel>
        
        
        <ListView Name="ShoesListView" Grid.Row="1" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">

                        <Grid Background="{Binding DiscountColor}">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="1000"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition  />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Image  Width="100" Grid.RowSpan="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image.Source>
                                    <Binding Path="ProductImage">
                                        <Binding.TargetNullValue>
                                            <ImageSource>
                                                img/picture.png
                                            </ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" >
                                <TextBlock Text="{Binding Categories.CategoryName}" FontSize="25"></TextBlock>
                                <TextBlock Text=" | " FontSize="25"></TextBlock>
                                <TextBlock Text="{Binding ProductName}" FontSize="25"></TextBlock>
                            </StackPanel>
                            <TextBlock Text="{Binding ProductDescription, StringFormat= Описание товара: {0}}" Grid.Row="2" Grid.Column="1"  FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding Manufacturers.ManufacturerName, StringFormat= Производитель: {0}}" Grid.Row="3" Grid.Column="1"  FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding Supplers.SupplerName, StringFormat= Поставщик: {0}}" Grid.Row="4" Grid.Column="1"  FontSize="20" ></TextBlock>





                            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1"  >
                                <TextBlock Text="Цена: " FontSize="20"  ></TextBlock>
                                <TextBlock Text="{Binding OldCost}" FontSize="20" TextDecorations="Strikethrough" Foreground="{Binding CostColor}"  ></TextBlock>
                                <TextBlock Text="{Binding NewCost}" FontSize="20"  ></TextBlock>

                            </StackPanel>


                            <TextBlock Text="{Binding ProductUnitMeasure, StringFormat= Единица измерения: {0}}" Grid.Row="6" Grid.Column="1"  FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding ProductQuantityInStock, StringFormat= Количество на складе: {0}}" Grid.Row="7" Grid.Column="1"  FontSize="20"  ></TextBlock>


                            <TextBlock Text="{Binding ProductCurrentDiscount, StringFormat= Скидка: {0}%}" Grid.Row="1" Grid.Column="2"  FontSize="20" ></TextBlock>

                        </Grid>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Button Name="AddButton" Content="Добавить" Click="AddButton_Click" Grid.Row="2" Visibility="Collapsed"></Button>
    </Grid>
</Page>
