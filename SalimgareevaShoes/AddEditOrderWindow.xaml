<Window x:Class="SalimgareevaShoes.AddEditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalimgareevaShoes"
        mc:Ignorable="d"
        Title="Добавление/редактирование заказа"  Height="450" Width="800" FontFamily="Times New Roman" Icon="/img/Icon.ico">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <TextBlock Text="ID" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Margin="5"></TextBlock>
        <TextBlock Text="Дата доставки" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Margin="5"></TextBlock>
        <TextBlock Text="Пункт выдачи" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Margin="5"></TextBlock>
        <TextBlock Text="Заказ на пользователя" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" Margin="5"></TextBlock>
        <TextBlock Text="Артикул заказа" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4" Margin="5"></TextBlock>
        <TextBlock Text="Статус заказа" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5" Margin="5"></TextBlock>

        <TextBox Text="{Binding OrderID}" Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" FontSize="20" IsEnabled="False"></TextBox>
        <DatePicker Name="DeliveryDateDP" Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" FontSize="20"></DatePicker>
        <ComboBox Name="PickUpPointsCB" Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="400" FontSize="20" SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding OrderPickUpPointStr}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox Name="UsersCB" Grid.Row="3" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="400" FontSize="20" SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="20" Text="{Binding UserSurname}"></TextBlock>
                        <TextBlock FontSize="20" Text=" "></TextBlock>
                        <TextBlock FontSize="20" Text="{Binding UserName}"></TextBlock>
                        <TextBlock FontSize="20" Text=" "></TextBlock>
                        <TextBlock FontSize="20" Text="{Binding UserPatronymic}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox Text="{Binding OrderCode}" Grid.Row="4" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" FontSize="20"></TextBox>

        <ComboBox Name="StatusCB" Grid.Row="5" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="120" FontSize="20" SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding OrderStatusName}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>




        <TextBlock Name="ProductsInOrderTB" Text="Продукты в заказе" FontSize="20" VerticalAlignment="Center" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="0" Margin="5"></TextBlock>

        <ListView Name="ShoesListView" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3" HorizontalAlignment="Center" Width="600" Margin="10" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="DeleteOrderProductButton" Grid.RowSpan="4" Content="Удалить из заказа" Grid.Column="0" Click="DeleteOrderProductButton_Click"></Button>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" >
                                <TextBlock Text="{Binding Products.Categories.CategoryName}" FontSize="25"></TextBlock>
                                <TextBlock Text=" | " FontSize="25"></TextBlock>
                                <TextBlock Text="{Binding Products.ProductName}" FontSize="25"></TextBlock>
                            </StackPanel>
                            <TextBlock Text="{Binding Products.ProductDescription, StringFormat= Описание товара: {0}}" Grid.Row="1" Grid.Column="1"  FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding ProductQuantity, StringFormat= Количество в заказе: {0}}" Grid.Row="2" Grid.Column="1"  FontSize="20" ></TextBlock>

                        </Grid>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ComboBox Name="ProductsCB" Grid.Row="5" Grid.Column="2"  Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" FontSize="20" SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="{Binding ProductArticle, StringFormat= Артикул: {0}}" Grid.Row="1"   FontSize="20" ></TextBlock>
                        <TextBlock Text="{Binding ProductName, StringFormat=', {0}'}" FontSize="20"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Name="ProductInOrderTB" Text="Продукт" FontSize="20" Grid.Column="2" VerticalAlignment="Bottom"  HorizontalAlignment="Center" Grid.Row="4" Margin="15"></TextBlock>
        <TextBlock Name="ProductQuantityInOrderTB" Text="Количество продукта" FontSize="20" Grid.Column="3" VerticalAlignment="Bottom"  HorizontalAlignment="Center" Grid.Row="4" Margin="15"></TextBlock>

        <TextBox Name="ProductQuantityInOrder" TextChanged="ProductQuantityInOrder_TextChanged" Grid.Row="5" Grid.Column="3"  Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" FontSize="20" ></TextBox>
        <Button Name="AddProductsButton" Click="AddProductsButton_Click" Grid.ColumnSpan="2" Content="Добавить продукт" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="6" Margin="5"></Button>



        <Button Name="SaveButton" Grid.ColumnSpan="4" Grid.Row="10" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SaveButton_Click"></Button>
    </Grid>
</Window>
