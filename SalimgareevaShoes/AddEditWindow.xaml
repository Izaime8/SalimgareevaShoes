<Window x:Class="SalimgareevaShoes.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalimgareevaShoes"
        mc:Ignorable="d"
        Title="Добавление и редактирование продуктов" Height="550" Width="900" Icon="img/Icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Margin="10" Text="ID" Height="40" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Name="IDtextblock" Visibility="Collapsed" ></TextBlock>
        <TextBlock Margin="10" Text="Артикул" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" ></TextBlock>
        <TextBlock Margin="10" Text="Название" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" ></TextBlock>
        <TextBlock Margin="10" Text="Категория" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" ></TextBlock>
        <TextBlock Margin="10" Text="Описание" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4" ></TextBlock>
        <TextBlock Margin="10" Text="Производитель" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5" ></TextBlock>
        <TextBlock Margin="10" Text="Поставщик" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" ></TextBlock>
        <TextBlock Margin="10" Text="Цена" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Grid.Row="3" ></TextBlock>
        <TextBlock Margin="10" Text="Единица измерения" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Grid.Row="4" ></TextBlock>
        <TextBlock Margin="10" Text="Количество на складе" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Grid.Row="5" ></TextBlock>
        <TextBlock Margin="10" Text="Действующая скидка" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="6" ></TextBlock>


        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ProductID}" FontSize="20" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Name="IDTB" IsEnabled="False" Visibility="Collapsed"></TextBox> 
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ProductArticle}" FontSize="20" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ProductName}" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox> 
        
        
        <ComboBox Name="CategoryCB" Grid.Row="3" Grid.Column="1" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding CategoryName}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding ProductDescription}" FontSize="20" Width="300" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox> 
        <ComboBox Name="ManufacturersCB" Grid.Row="5" Grid.Column="1" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ManufacturerName}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox> 
        <ComboBox Name="SupplersCB" Grid.Row="2" Grid.Column="3" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding SupplerName}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox  Grid.Row="3" Grid.Column="3" Text="{Binding ProductCost}" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox>
        <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding ProductUnitMeasure}" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox>
        <TextBox Grid.Row="5" Grid.Column="3" Text="{Binding ProductQuantityInStock}" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox>
        
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ProductCurrentDiscount}" FontSize="20" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox>



        <Button Click="ChangeImage_Click" Name="ChangeImage" Content="Изменить изображение" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="6" Grid.Column="2" Margin="10" Width="250" ></Button>
        <Image Grid.Row="6" Grid.Column="3" Width="150" Height="150"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Name="ProductImage">
            <Image.Source>
                <Binding Path="ProductImage">
                    <Binding.TargetNullValue>
                        <ImageSource>
                            img/picture.png
                        </ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>
        
        
        <Button Name="SaveButton" Click="SaveButton_Click" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="4" Grid.Row="8"></Button>
        
    </Grid>
</Window>
