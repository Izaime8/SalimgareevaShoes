<Page x:Class="SalimgareevaShoes.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalimgareevaShoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Times New Roman" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация"  FontSize="42" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" ></TextBlock>
        <TextBlock Text="Логин"  FontSize="30" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" ></TextBlock>
        <TextBox Text="94d5ous@gmail.com" Name="LoginTB" FontSize="30" Grid.Row="1" Width="300" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" ></TextBox>
        <TextBlock Text="Пароль"  FontSize="30" Grid.Row="2" HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="10" ></TextBlock>
        <TextBox Text="uzWC67" Name="PasswordTB"  FontSize="30" Grid.Row="2" Grid.Column="1" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" ></TextBox>
        

        <Button x:Name="LoginButton" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Click="AuthButton_Click" Grid.Column="0" Grid.Row="3" FontSize="30" Height="45"></Button>
        <Button x:Name="LoginAsGuestButton" Content="Войти как гость" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginAsGuestButton_Click"  Grid.Column="1" Grid.Row="4"></Button>
    </Grid>
</Page>
